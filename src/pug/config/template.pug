block config
	-let currentPage 		= 'home'
	-let content 			= 'My Page'
	-let siteName 			= 'GulpBoilerplate'
	-let pageDescription 	= 'Here is the description Page.'
doctype html
html(lang='en' prefix='og: http://ogp.me/ns#', class='no-js') 
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name='format-detection', content='telephone=no')
		meta(name="theme-color", content="#0096D9")
		link(rel="shortcut icon", type="image/png", href="./assets/img/icon_1024.png")
		link(rel="apple-touch-icon", href="./assets/img/icon_1024.png")
		meta(name="description", content="Breve descripci√≥n del sitio web que ayuda en el SEO.")
		meta(http-equiv="Content-Security-Policy", content="upgrade-insecure-requests")
		meta(http-equiv="Cache-Control", content="no-cache, no-store, must-revalidate")
		meta(http-equiv="Expires", content="0")
		meta(http-equiv="Pragma", content="no-cache") 
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css")
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet")

		link(rel="stylesheet" href="tailwind.css")
		link(rel="stylesheet" href="styles.css")

		title= currentPage.slice(0,1).toUpperCase() + currentPage.slice(1) + " | " + siteName
	body(class=`${currentPage} bg-[var(--bg-body)] flex flex-col min-h-screen `, itemscope itemtype="http://schema.org/WebPage" )
		div(class='flex flex-col') 
			//- here start the Main Header
			header(class='main-container bg-[var(--base-color)] min-h-[var(--header-height)]')
				block main-header
			//- here ends the Main Header
			//- here start the Main Container
			main(class='flex-1')
				block main-container
			//- here ends the Main Container
			//- here start the Main Footer 
			footer(class='main-container bg-[var(--base-color)] min-h-[var(--header-height)]')
				block main-footer
			//- here ends the Main Footer
		script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js")
		script(src="index.js")
		block scripts
