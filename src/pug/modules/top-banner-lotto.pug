section(class='top-banner flex flex-col pt-[4px] pb-[32px] m:pt-[16px] m:pb-[56px] lg:pt-[40px] lg:pb-[80px] relative container')
	
	div(class='flex flex-col mb-[12px] m:mb-[64px] lg:mb-[64px] items-center m:items-start relative')
		img(src="https://images.betanysports.eu/wp-content/uploads/composition_02.webp", alt="top-banner-img", 
			class=`
				hidden 
				m:block 
				absolute 
				m:right-[-74px] 
				m:top-[160px] 
				top-[120px] 
				lg:top-[43%] 
				-translate-y-1/2 
				z-[0] 
				m:max-w-[70%]  
				lg:w-[800px] 
				lg:right-[-120px] 
			`)
