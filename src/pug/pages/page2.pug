extends ../config/template
append config
	-currentPage		= "home"
	-siteName			= 'Layouts'
	-content			= 'content'
	-pageDescription	= 'Pagina inicial de MyBoilerplate'
block body-container
	secrion(class="main-container")
		div(class="container")
			h1(class='text-[green]') Page 2
	-let internalSaludo = 'Internal Module';	
	section(class="main-container border border-[steelblue]") 
		div(class="container  border border-[tomato]") 
			h2(class='internal-module-style') grid
			div(class='grid grid-cols-1 sm:grid-cols-2 m:grid-cols-3 l:grid-cols-4 lg:grid-cols-5 xl:grid-cols-7 gap-5')
				-for(let i = 1; i<=10; i++)
					div(class='bg-red-300 h-32 flex items-center justify-center')
						span: b= internalSaludo
							| #{i}
	block scripts
